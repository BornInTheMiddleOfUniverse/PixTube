if loggedInUser 
    hr
    div.add-comments          
        div.profile-img_m
            if loggedInUser.socialOnly || loggedInUser.noAvatar
                img.avatar_m(src=`${loggedInUser.profilePicPath}`, crossorigin="anonymous") 
            else
                img.avatar_m(src=`/${loggedInUser.profilePicPath}`, crossorigin="anonymous")    
        div.comment-line  
            form#addCommentForm         
                textarea(cols="70", rows="0.5", placeholder="Write a nice comment here!")
                button Submit
            
div.comments
    each comment in video.comments.reverse() 
        +comment(comment)